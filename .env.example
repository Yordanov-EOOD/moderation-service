# Environment configuration for Moderation Service

# Application Settings
PORT=5000
DEBUG=false
FLASK_ENV=production

# Moderation Settings
USE_ML_MODEL=true
TOXICITY_THRESHOLD=0.515
CONFIDENCE_THRESHOLD=0.3
BATCH_SIZE_LIMIT=100
CONTENT_LENGTH_LIMIT=10000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO

# Model Settings (when using ML model)
MODEL_NAME=toxicity-model-fast
MODEL_CACHE_DIR=./models
USE_GPU=false

# Rate limiting (requests per minute)
RATE_LIMIT=100

# Batch processing limits
MAX_BATCH_SIZE=100

# Content limits
MAX_CONTENT_LENGTH=10000
